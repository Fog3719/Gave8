mixin card(tag, imageSrc, title, description, link)
  .card.scroll-animation.text-white
    span.tag= tag
    img(src=imageSrc, alt="", class="object-cover object-center rounded-lg w-full h-42", loading="lazy")
    h2.text-xl= title
    p(class="text-sm text-white text-opacity-50 overflow-clip")= description
    a(href=link)
      button.readmore Read More

//- 定义一个可复用的 software-list-item mixin
mixin software-list-item(imageSrc, altText, title, description)
  .software-list-item.scroll-animation
    img(src=imageSrc, alt=altText, srcset="", class="sw-logo-resize")
    div(class="flex flex-col lg:hidden")
      h3.text-white= title
      p.text-white.text-opacity-50= description



